<dialog id="editFolderDialog" class="rounded-lg z-50">
  <form class="p-5 w-full max-w-lg bg-white z-50" method="POST">
    <div class="space-y-3">
      <%- include('../partials/_input', {label: 'New folder name', name: 'new_folder_name', type: 'text', placeholder: 'New folder name...', value: '' }) %>
      <%- include('../partials/_error', { field: 'new_folder_name' }) %>
    </div>
    <% if (folderId) { %>
    <input type="hidden" name="parent_folder" value="<%= folderId %>" />
    <% } %>
    <div class="flex justify-end mt-3 gap-3">
      <button type="button" onclick="document.getElementById('editFolderDialog').close()">Cancel</button>
      <button type="submit">Edit</button>
    </div>
  </form>
</dialog>